@model MvcBootstrap2.Models.Course

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-important">@ViewBag.ErrorMessage</div>
}
<h3>Are you sure you want to delete this?</h3>

<div class="well">
    <form class="form-horizontal" role="form">
        <fieldset>
            <legend>Course</legend>

            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.CourseID)</label>
                <div class="controls">
                    @Html.DisplayFor(model => model.CourseID)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.Title)</label>
                <div class="controls">
                    @Html.DisplayFor(model => model.Title)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.Credits)</label>
                <div class="controls">
                    @Html.DisplayFor(model => model.Credits)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.Department.Name)</label>
                <div class="controls">
                    @Html.DisplayFor(model => model.Department.Name)
                </div>
            </div>
        </fieldset>
    </form>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <button type="submit" class="btn btn-primary"><i class="icon-trash icon-white"></i>Delete</button>
        <a class="btn btn-default" href="@Url.Action("Index")"><i class="icon-arrow-left icon-white"></i>Cancel</a>
    </p>
}
