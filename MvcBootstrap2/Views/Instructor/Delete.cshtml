@model MvcBootstrap.Models.Instructor

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-important">@ViewBag.ErrorMessage</div>
}
<h3>Are you sure you want to delete this?</h3>

<div class="well">
    <form class="form-horizontal" role="form">
        <fieldset>
            <legend>Instructor</legend>

            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.LastName)</label>
                <div class="controls">
                    @Html.DisplayFor(model => model.LastName)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.FirstMidName)</label>
                <div class="controls">
                    @Html.DisplayFor(model => model.FirstMidName)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.HireDate)</label>
                <div class="controls">
                    @Html.DisplayFor(model => model.HireDate)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.FullName)</label>
                <div class="controls">
                    @Html.DisplayFor(model => model.FullName)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.OfficeAssignment.Location)</label>
                <div class="controls">
                    @Html.DisplayFor(model => model.OfficeAssignment.Location)
                </div>
            </div>
        </fieldset>
    </form>
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <button type="submit" class="btn btn-primary"><i class="icon-trash icon-white"></i>Delete</button>
        <a class="btn btn-default" href="@Url.Action("Index")"><i class="icon-arrow-left icon-white"></i>Cancel</a>
    </p>
}
